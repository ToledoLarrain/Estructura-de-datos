void cuadratica::solucion(int a,int b,int c)
{
  float D,R,x1,x2;
  D=(b*b)-(4*(a*c));
  R=sqrt(D);
 
  if(D<0)
  {
   cout<<"No se puede hallar una solucion en el conjunto de los reales"<<endl;
  }
  else
  {
   x1=(-b+R)/(2*a);
   x2=(-b-R)/(2*a);
   cout<<"los resultados son:"<<endl;
   cout<<"x1="<<x1<<endl;
   cout<<"X2="<<x2;
  }
}

