#include "stdafx.h"
#include <iostream>
#include <conio.h>
using namespace std;

void main()
{
	int n,c,s=0;
	cout<<"por favor ingresar un numero entero cualquiera"<<endl;
	cin>> n;
	while(n>0)
	{
		c=n%10;
		s=s+c;
		n=n/10;
	}
	cout<<"la sumatoria de digitos del numero entero ingresado es igual a: "<<s;
	getch();
}
